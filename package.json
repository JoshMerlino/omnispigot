        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "dotenv": "^16.0.0",
        "express": "^4.17.3",
        "extract-zip": "^2.0.1",
        "filestore-json": "^1.1.8",
        "mkdirp": "^1.0.4",
        "node-fetch": "^2.6.7",
        "uuid": "^8.3.2",
        "yaml": "^1.10.2"
    }
