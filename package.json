{
    "name": "ts-server",
    "version": "1.0.0",
    "description": "Easily create back end servers with powerful API's using TypeScript and Express.",
    "main": "lib/src/",
    "types": "lib/",
    "author": "Josh Merlino",
    "license": "ISC",
    "webserver": {
        "http": {
            "port": 80,
            "timeout": 10
        },
        "https": {
            "enabled": true,
            "port": 443,
            "certs": "./ssl"
        }
    },
    "scripts": {
        "watch-ts": "tsc -w",
        "watch-js": "nodemon .",
        "dev": "concurrently \"npm:watch-*\"",
        "start": "node .",
        "build": "tsc"
    },
    "devDependencies": {
        "@types/compression": "^1.7.2",
        "@types/cookie-parser": "^1.4.2",
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.13",
        "@types/mkdirp": "^1.0.2",
        "@types/node": "^17.0.19",
        "@types/node-fetch": "^2.6.1",
        "@types/uuid": "^8.3.4",
        "@types/webpack-env": "^1.16.3",
        "@typescript-eslint/eslint-plugin": "^4.33.0",
        "@typescript-eslint/parser": "^4.33.0",
        "concurrently": "^7.0.0",
        "eslint": "^7.32.0",
        "nodemon": "^2.0.15",
        "typescript": "^4.5.5",
        "typescript-eslint": "0.0.1-alpha.0"
    },
    "dependencies": {
        "async-require-context": "^1.8.11",
        "chalk": "^5.0.0",
